#include <iostream>
using namespace std;

int main()
{
    int year;
    cout<<"Enter year : ";
    cin>>year;
    if (year>=1000){
        if (year%4==0&&year%400==0)
        cout<<"It's a leap year";
        else
        cout<<"It's not a leap year";
    }
    else if(year>0){
        if (year%4==0)
        cout<<"It's a leap year";
        else
        cout<<"It's not a leap year";
    }
    else
    cout<<"Invalid number";
    return 0;
}
