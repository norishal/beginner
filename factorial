#include <iostream>
using namespace std;

int main()
{
    int n,i;
    long double factorial=1.0;
    cout<<"Enter positive number : ";
    cin>>n;
    if (n<0)
    cout<<"Error!";
    else {
        for (int i=1;i<=n;++i) {
        factorial*=i;}
    cout<<"Factorial for "<<n<<" is "<<factorial;
    
    }
    
    return 0;
}
