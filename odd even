#include <iostream>

using namespace std;

int main()
{
    int num1;
    cout<<"Enter a number ";
    cin>>num1;
    if (num1>=1){
        if (num1%2==0)
        cout<<"The number is even ";
        else
        cout<<"The number is odd ";
        return num1;
    }
    else
    cout<<"Number not valid, positive number only";
    return 0;
}

or using ternary operators

#include <iostream>

using namespace std;

int main()
{
    int n;

  cout << "Enter an integer: ";
  cin >> n;
    
  (n % 2 == 0) ? cout << n << " is even." :  cout << n << " is odd.";
    
    return 0;
}
