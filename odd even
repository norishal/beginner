#include <iostream>

using namespace std;

int main()
{
    int num1;
    cout<<"Enter a number ";
    cin>>num1;
    if (num1>=1){
        if (num1%2==0)
        cout<<"The number is even ";
        else
        cout<<"The number is odd ";
        return num1;
    }
    else
    cout<<"Number not valid, positive number only";
    return 0;
}
